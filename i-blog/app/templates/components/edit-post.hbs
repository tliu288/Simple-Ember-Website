<button class="ui mini circular icon green button" {{action 'openEditModal'}}
   title ="Edit"><i class="write icon"></i>
</button>

{{#ui-modal name= modalName class= modalName }}
  <div class="header">
    Edit post "{{title}}"
  </div>
    <div class="content">
      <div class ="ui form">
        <div class ="field">
          <label>Post Title</label>
          {{input type="text" cols="50" rows="1" value = title placeholder="add title"}}
        </div>
        <div class="field">
          <label>Post Body</label>
          {{textarea value=body cols="50" rows="3" placeholder="add body"}}
        </div>
      </div>
    </div>
  <br>

  <div class="actions">
    <div class = "ui black deny button">
      Cancel
    </div>
    <div class ="ui postive right labeled icon ok button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
